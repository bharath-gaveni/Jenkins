pipeline {

    agent {
        node {
            label 'AGENT-1'
        }
    }

    stages {
        //first stage
        stage('Build') {
            steps {
                script {
                    sh """
                    echo "Building"
                    """
                }
            }
        }
        //second stage
        stage('Test') {
             steps {
                script {
                    sh """
                    echo "Testing"
                    """
                }
            }
        }
        //third stage
        stage('Deploy') {
            steps {
                script {
                    sh """
                    echo "Building"
                    """
                }
            }
        }
    }
        post {
            always {
               echo 'I will run irrespective of if pipeline is success or failure'
               cleanWs()
            }
            success {
                echo 'success'
            }

            failure {
                echo 'failure'
            }
        }
}